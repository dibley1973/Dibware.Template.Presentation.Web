@using Dibware.Template.Presentation.Web.Resources
@using Dibware.Template.Presentation.Web.HtmlHelpers
@model Dibware.Template.Presentation.Web.Models.Account.RegisterViewModel

<hgroup class="title">
  <h1>@PageTitles.Register</h1>
</hgroup>
<section id="registerForm">
  @using (Html.BeginForm())
  {
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="text-center">Create a new account</h2>
      </div>
      <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.BootstrapValidationSummary()

        <div class="form-group">
          @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-lg", @placeholder = @PromptText.Username })
          @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div class="form-group">
          @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control input-lg", @placeholder = @PromptText.EmailAddress })
          @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>
        <div class="form-group">
          @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = @PromptText.Password })
          @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">
          @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @placeholder = @PromptText.ConfirmPassword })
          @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Register</button>
        </div>
      </div>
    </div>
  }
</section>