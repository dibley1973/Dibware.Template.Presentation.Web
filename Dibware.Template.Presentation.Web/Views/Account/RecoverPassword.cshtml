@using Dibware.Template.Presentation.Web.Resources
@using Dibware.Template.Presentation.Web.HtmlHelpers
@model Dibware.Template.Presentation.Web.Models.Account.RecoverPasswordViewModel

<hgroup class="title">
  <h1>@PageTitles.RecoverPassword</h1>
</hgroup>
<section id="registerForm">
  @using (Html.BeginForm())
  {
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="text-center">@PageSubTitles.RecoverPassword</h2>
      </div>
      <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.BootstrapValidationSummary()

        <p>@PageText.RecoverPassword</p>
        <div class="form-group">
          @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-lg", @placeholder = @PromptText.Username })
          @Html.ValidationMessageFor(m => m.Username)
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">@ButtonText.SendEmail</button>
        </div>
      </div>
    </div>
  }
</section>