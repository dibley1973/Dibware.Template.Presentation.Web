@using Dibware.Template.Presentation.Web.Resources
@using Dibware.Template.Presentation.Web.HtmlHelpers
@using Dibware.Template.Presentation.Web.Models.Home
@model ContactViewModel

<hgroup class="title">
  <h1>@PageTitles.Contact</h1>
</hgroup>
<section id="contactPage">
  @using (Html.BeginForm())
  {
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="text-center">@PageSubTitles.ContactUs</h2>
      </div>
      <div class="modal-body">
        @Html.BootstrapValidationSummary()
        <div class="form-group">
          @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-lg", @placeholder = @PromptText.Name })
          @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
          @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control input-lg", @placeholder = @PromptText.EmailAddress })
          @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>
        <div class="form-group">
          @Html.TextAreaFor(m => m.Enquiry, new { @class = "form-control input-lg", @placeholder = @PromptText.Enquiry, @rows = 6 })
          @Html.ValidationMessageFor(m => m.Enquiry)
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">@ButtonText.Send</button>
        </div>
      </div>
    </div>
  }
</section>